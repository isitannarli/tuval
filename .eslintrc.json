{
  "env": {
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard-with-typescript",
    "prettier"
  ],
  "overrides": [
    {
      "files": ["*.enums.ts", "*.types.ts", "*.utils.ts", "*.mapping.ts"],
      "rules": {
        "import/prefer-default-export": ["off"]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "@typescript-eslint/triple-slash-reference": [
      "warn",
      { "path": "always", "types": "always", "lib": "always" }
    ]
  }
}
